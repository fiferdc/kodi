<addon id="repository.fifer.kodi" name="Fifer Kodi Addons" version="1.0.0"
    provider-name="fiferdc">
    <requires>
        <import addon="xbmc.addon" version="12.0.0" />
    </requires>
    <extension point="xbmc.addon.repository" name="Fifer Kodi Repository">
        <dir>
            <info>https://github.com/fiferdc/kodi/addons.xml</info>
            <checksum>https://github.com/fiferdc/kodi/addons.xml.md5</checksum>
            <datadir>https://github.com/fiferdc/kodi</datadir>
            <hashes>sha256</hashes>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Fifer Addon Repository</summary>
        <description>This repo contains all personally-customized addons</description>
        <disclaimer />
        <platform>all</platform>
        <!-- <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets> -->
    </extension>
</addon>